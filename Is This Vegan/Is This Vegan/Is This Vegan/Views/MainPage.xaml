<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             x:Class="Is_This_Vegan.Views.MainPage"
             xmlns:tt="clr-namespace:Is_This_Vegan.Backend"
             xmlns:local="clr-namespace:Is_This_Vegan.Backend"
             Title="Home"
             BackgroundColor="#1A1A1A">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".7*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Touch Screen Effect-->
            <Grid.Effects>
                <tt:TouchEffect Capture="True"
                            TouchAction="OnTouchEffectAction" />
            </Grid.Effects>

            <!--Delineator Under Nav-->
            <Frame Grid.Row="0"
                       Grid.ColumnSpan="3"
                       BackgroundColor="Transparent"
                       Padding="0">
                <BoxView Color="#4b4b4b"
                         CornerRadius="10"
                         HeightRequest=".5"
                         VerticalOptions="Center"
                         HorizontalOptions="FillAndExpand" />
            </Frame>

            <!--LOGO SECTION-->
            <Frame Grid.Row="1" 
                       Grid.ColumnSpan="3"
                       BackgroundColor="Transparent"
                       Margin="0"
                       Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="Logo" 
                               Source="{local:ImageResource Is This Vegan.SharedMedia.logo.png}"
                               Grid.Row="0"
                               Grid.Column="0"
                               Aspect="AspectFit"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                </Grid>
            </Frame>

            <!--Delineator Under Logo-->
            <Frame Grid.Row="2"
                       Grid.ColumnSpan="3"
                       BackgroundColor="Transparent"
                       Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".05*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width=".05*"/>
                    </Grid.ColumnDefinitions>
                    <BoxView Grid.Column="1"
                                 Color="#4b4b4b"
                                 CornerRadius="10"
                                 HeightRequest=".5"
                                 VerticalOptions="Center"
                                 HorizontalOptions="FillAndExpand" />
                </Grid>
            </Frame>

            <!--VOTING SUGGESTIONS-->
            <Frame Grid.Row="3"
                   Grid.ColumnSpan="3"
                   BackgroundColor="Transparent"
                   Margin="10, 0, 10, 10"
                   Padding="0"
                   x:Name="Test_Frame">
                <Grid x:Name="Voting_Grid">
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="Are_These_Vegan_Row" 
                                       Height=".75*" />
                        <RowDefinition x:Name="Circle_Icons_Row"
                                       Height="2*" />
                        <RowDefinition x:Name="Ingredients_Row" 
                                       Height=".5*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Label x:Name="Are_These_Vegan_Text"
                           Text="Are These Vegan?"
                           TextColor="#CEFFCE"
                           FontSize="Large"
                           Grid.Row="0"
                           Grid.ColumnSpan="3"
                           HorizontalOptions="Center"/>

                    <ImageButton Source="{local:ImageResource Is This Vegan.SharedMedia.circle.png}"
                                 Grid.Row="1"
                                 Grid.Column="0"
                                 Aspect="AspectFit"
                                 BackgroundColor="Transparent"
                                 Clicked="ImageButton_Clicked"/>
                    <Label x:Name="Ingredient_1_Text"
                           Text="Ingredient 1"
                           TextColor="#CEFFCE"
                           Grid.Row="2"
                           Grid.Column="0"
                           HorizontalOptions="Center"
                           VerticalOptions="End" />

                    <Image Source="{local:ImageResource Is This Vegan.SharedMedia.circle.png}" 
                               Grid.Row="1"
                               Grid.Column="1"
                               Aspect="AspectFit"
                               BackgroundColor="Transparent"/>
                    <Label x:Name="Ingredient_2_Text"
                           Text="Ingredient 2"
                               TextColor="#CEFFCE"
                               Grid.Row="2"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               VerticalOptions="End" />

                    <Image Source="{local:ImageResource Is This Vegan.SharedMedia.circle.png}"
                               Grid.Row="1"
                               Grid.Column="2"
                               Aspect="AspectFit"
                               BackgroundColor="Transparent"/>
                    <Label x:Name="Ingredient_3_Text"
                           Text="Ingredient 3"
                               TextColor="#CEFFCE"
                               Grid.Row="2"
                               Grid.Column="2"
                               HorizontalOptions="Center"
                               VerticalOptions="End" />
                </Grid>
            </Frame>

            <!--Delineator Under Ingredients-->
            <Frame Grid.Row="4"
                       Grid.ColumnSpan="3"
                       BackgroundColor="Transparent"
                       Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".05*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width=".05*"/>
                    </Grid.ColumnDefinitions>
                    <BoxView Grid.Column="1"
                                 Color="#4b4b4b"
                                 CornerRadius="10"
                                 HeightRequest=".5"
                                 VerticalOptions="Center"
                                 HorizontalOptions="FillAndExpand" />
                </Grid>
            </Frame>

            <!--SWIPE ACTIONS-->
            <Frame x:Name="SwipeActionFrame" 
                       BackgroundColor="Transparent" 
                       Grid.Row="5" 
                       Grid.ColumnSpan="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image x:Name="VoteCircle" 
                               Source="{local:ImageResource Is This Vegan.SharedMedia.vote.png}"
                               Grid.Row="0"
                               Grid.Column="0"
                               Aspect="AspectFit"
                               HorizontalOptions="Start"/>
                    <Image x:Name="ScanCircle" 
                               Source="{local:ImageResource Is This Vegan.SharedMedia.scan.png}"
                               Grid.Row="1"
                               Grid.Column="1"
                               Aspect="AspectFit"
                               HorizontalOptions="End"/>
                </Grid>
            </Frame>

        </Grid>
    </ContentPage.Content>
</ContentPage>

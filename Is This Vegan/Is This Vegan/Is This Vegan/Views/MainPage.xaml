<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             x:Class="Is_This_Vegan.Views.MainPage"
             xmlns:tt="clr-namespace:Is_This_Vegan.Backend"
             xmlns:local="clr-namespace:Is_This_Vegan.Backend"
             Title="Home"
             BackgroundColor="#1A1A1A">
    <ContentPage.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.Effects>
                    <tt:TouchEffect Capture="True"
                            TouchAction="OnTouchEffectAction" />
                </Grid.Effects>

                <!--LOGO SECTION-->
                <Frame Grid.Row="0" 
                       Grid.ColumnSpan="3"
                       BackgroundColor="Transparent"
                       Margin="0"
                       Padding="0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    <Image x:Name="Logo" 
                               Source="{local:ImageResource Is This Vegan.SharedMedia.Final Logo alone.png}"
                               Grid.Row="0"
                               Grid.Column="0"
                               Aspect="AspectFit"
                               HeightRequest="100" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    <!--<Label Grid.Row="0" 
                               Grid.Column="0"
                               Text="LOGO"
                               TextColor="#CEFFCE" 
                               FontSize="Large"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>-->
                    </Grid>
                </Frame>
                
                <!--VOTING SUGGESTIONS-->
                <Frame Grid.Row="1" 
                       Grid.ColumnSpan="3"
                       BackgroundColor="Transparent"
                       Margin="10"
                       Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="Are These Vegan?"
                               TextColor="#CEFFCE"
                               FontSize="Large"
                               Grid.Row="0"
                               Grid.Column="0" 
                               Grid.ColumnSpan="3"
                               HorizontalOptions="Center"/>

                        <ImageButton Source="{local:ImageResource Is This Vegan.SharedMedia.Final Icons-circle.png}"
                               Grid.Row="1"
                               Grid.Column="0"
                               Aspect="AspectFit"
                               WidthRequest="75" 
                               BackgroundColor="Transparent"
                               Clicked="BitmapDraggingPage_Navigation_Event"/>
                        <Label Text="Ingredient 1"
                               TextColor="#CEFFCE"
                               Grid.Row="2"
                               Grid.Column="0"
                               HorizontalOptions="Center"
                               VerticalOptions="End" />

                        <Image Source="{local:ImageResource Is This Vegan.SharedMedia.Final Icons-circle.png}" 
                               Grid.Row="1"
                               Grid.Column="1"
                               Aspect="AspectFit"
                               WidthRequest="75" 
                               BackgroundColor="Transparent"/>
                        <Label Text="Ingredient 2"
                               TextColor="#CEFFCE"
                               Grid.Row="2"
                               Grid.Column="1"
                               HorizontalOptions="Center"
                               VerticalOptions="End" />

                        <Image Source="{local:ImageResource Is This Vegan.SharedMedia.Final Icons-circle.png}"
                               Grid.Row="1"
                               Grid.Column="2"
                               Aspect="AspectFit"
                               WidthRequest="75" 
                               BackgroundColor="Transparent"/>
                        <Label Text="Ingredient 3"
                               TextColor="#CEFFCE"
                               Grid.Row="2"
                               Grid.Column="2"
                               HorizontalOptions="Center"
                               VerticalOptions="End" />
                        <!--<Button Text="Splash Test"
                                Grid.Row="3"
                                Clicked="Splash_Clicked"/>-->
                    </Grid>
                </Frame>
                
                <!--SWIPE ACTIONS-->
                <Frame x:Name="SwipeActionFrame" BackgroundColor="Transparent" Grid.Row="2" Grid.ColumnSpan="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                    <Image x:Name="VoteCircle" 
                               Source="{local:ImageResource Is This Vegan.SharedMedia.Final Icons_vote.png}"
                               Grid.Row="0"
                               Grid.Column="0"
                               Aspect="AspectFit"
                               WidthRequest="200" 
                               HorizontalOptions="Start"/>
                    <Image x:Name="ScanCircle" 
                               Source="{local:ImageResource Is This Vegan.SharedMedia.Scan.png}"
                               Grid.Row="1"
                               Grid.Column="1"
                               Aspect="AspectFit"
                               WidthRequest="200" 
                               HorizontalOptions="End"/>
                </Grid>
                </Frame>
                <!--Test Section for Home Icon-->
                <!--<Frame BackgroundColor="Transparent" Grid.Row="3" Grid.ColumnSpan="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
